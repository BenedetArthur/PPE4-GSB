<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PPE4GSB.Pages.PageModifierMedoc">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Le dépot légal du médicament"></Label>
            <Entry x:Name="txtDepotLegal" IsEnabled="False"></Entry>

            <Label Text="Nom commercial du medicament"></Label>
            <Entry x:Name="txtNomCommercial"></Entry>
            
            <Label Text="Composition du médicament"></Label>
            <Entry x:Name="txtComposition"></Entry>

            <Label Text="Les effets du médicament"></Label>
            <Entry x:Name="txtEffets"></Entry>

            <Label Text="Les contre-indications du médicament"></Label>
            <Entry x:Name="txtContreIndic"></Entry>

            <Label Text="Le prix de l'échantillon du médicament"></Label>
            <Entry x:Name="txtPrix"></Entry>

            <Label Text="Le code de la famille du médicament"></Label>
            <Entry x:Name="txtCodeFamille"></Entry>
            
            <Button Text="Modifier le médicament" x:Name="btnModifierMedoc" Clicked="btnModifMedoc_Clicked"></Button>
            <Button Text="Retour accueil" x:Name="BtnAccueil" Clicked="BtnAccueil_Clicked" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>